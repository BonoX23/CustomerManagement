@model FrontEnd.Models.UpdatePasswordModel

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4" style="width: 350px;">
        <h2 class="text-center mb-4">Alterar Senha</h2>

        <form asp-controller="AuthViewController" asp-action="UpdatePassword" method="post">
            <input asp-for="Login" type="hidden" />

            <div class="mb-3">
                <label class="form-label">Email do Usuário</label>
                <input type="email" class="form-control" value="@Model.Login" readonly />
            </div>

            <div class="mb-3">
                <label asp-for="NewPassword" class="form-label">Nova Senha</label>
                <div class="input-group">
                    <span asp-input-group-text>
                        <i class="bi bi-lock"></i>
                    </span>
                    <input asp-for="NewPassword" type="password" class="form-control" placeholder="Digite sua nova senha" required />
                </div>
                <span asp-validation-for="NewPassword" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">Alterar Senha</button>

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger mt-3 text-center" role="alert">
                    @TempData["ErrorMessage"]
                </div>
            }
            else if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success mt-3 text-center" role="alert">
                    @TempData["SuccessMessage"]
                </div>
            }
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
}
