@model List<FrontEnd.Models.CustomerModel>

<h2>Lista de Clientes</h2>

<p>
    <a asp-action="Create">Novo Cliente</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Email</th>
            <th>Logo</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>@item.Logo</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                    <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Deletar</a> |
                    <a asp-controller="AddressView" asp-action="Index" asp-route-customerId="@item.Id">Endereços</a>
                </td>
            </tr>
        }
    </tbody>
</table>